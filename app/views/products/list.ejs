			<%for(var i=0; i < list.length;i++){%>
			<div class="col-sm-4 col-lg-4 col-md-4">
				<div class="thumbnail">
					<img src="http://placehold.it/320x150" alt="">
					<div class="caption">
						<h4 class="pull-right">R$ <%=list[i].price%></h4>
						<h4><a href="#"><%=list[i].name%></a>
						</h4>
						<p><a href="/produtos/<%=list[i].category%>" ><%=list[i].category%></a></p>
						<p><%=list[i].description%></p>
					</div>
				</div>
			</div>
			<%}%>
		</div>
		<h1>Produtos</h1>
		<table border="1px">
			<tr>
				<td>id</td>
				<td>nome</td>
				<td>categoria</td>
				<td>descricao</td>
				<td>preco</td>

			</tr>
			<%for(var i=0; i < list.length;i++){%>
			<tr>
				<td><%=list[i]._id%></td>
				<td><%=list[i].name%></td>
				<td><%=list[i].category%></td>
				<td><%=list[i].description%></td>
				<td><%=list[i].price%></td>
				<td><button onclick=""></button></td>
			</tr>
			<%}%>
