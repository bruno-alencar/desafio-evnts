<html>
	<body>
		<form action="/produtos" method="post">
			<div>
				<label for="name">Nome</label>
				<input type="text" id="name" name="name" placeholder="Nome do produto" />
			</div>
			<div>
				<label for="preco">Preco</label>
				<input type="text" id="preco" name="preco" placeholder="150.25" />
			</div>
			<div>
				<label for="description">Descrição</label>
				<textarea cols="20" rows="10" type="text" id="description" name="description" placeholder="Fale sobre o produto"></textarea>
			</div>

			<input type="submit" value="Gravar"/>
		</form>
	</body>
</html>
