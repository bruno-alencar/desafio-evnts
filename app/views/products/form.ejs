<html>
	<body>
		<div class='erros'>
			<%if(validationErrors){%>
				<ul>
					<%for(var i= 0; i < validationErrors.length;i++){%>
						<li><%=validationErrors[i].msg%></li>
					<%}%>
				</ul>

			<%}%>
		</div>
		<form action="/produtos" method="post">
			<div>
				<label for="name">Nome</label>
				<input type="text" id="name" name="name" placeholder="Nome do produto" value="<%=product.name%>"/>
			</div>
			<div>
				<label for="preco">Preco</label>
				<input type="text" id="price" name="price" placeholder="150.25" value="<%=product.price%>"
				/>
			</div>
			<div>
				<label for="category">Categoria</label>
				<input type="text" id="category" name="category" placeholder="Categoria" value="<%=product.category%>" />
			</div>
			<div>
				<label for="description">Descrição</label>
				<textarea cols="20" rows="10" type="text" id="description" name="description" value="<%=product.description%>" placeholder="Fale sobre o produto"></textarea>
			</div>

			<input type="submit" value="Gravar"/>
		</form>
	</body>
</html>
